{
  "Version": "2012-10-17",
  "Statement": [
    {
    "Sid": "EnableDisable",
    "Effect": "Deny",
    "Action": [
        "account:EnableRegion"
    ],
    "Resource": "*",
    "Condition": {
        "ForAnyValue:StringNotLike": {
        "account:TargetRegion": "!Ref AllowedRegions"
        }
    }
    },
    {
    "Sid": "DenyAllOutsideRequestedRegions",
    "Effect": "Deny",
    "NotAction": [
        "cloudfront:*",
        "iam:*",
        "route53:*",
        "support:*"
    ],
    "Resource": "*",
    "Condition": {
        "ForAnyValue:StringNotLike": {
        "aws:RequestedRegion": "!Ref AllowedRegions"
        }
    }
    }
  ] 
}
